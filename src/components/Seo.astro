---
import { SEO } from 'astro-seo';

interface Props {
    title?: string;
    description?: string;
    ogImage?: string;
}
const {
    title,
    description = 'Urban Consulting - Affordable Business Consulting',
    ogImage = 'https://pbs.twimg.com/profile_images/1777320447295578112/cc79gCs1_400x400.jpg',
} = Astro.props as Props;
const twitterHandle = '@officialurbanus';
---

<SEO
    title={title ? `${title} | 𝔘𝔯𝔟𝔞𝔫` : '𝔘𝔯𝔟𝔞𝔫 Consulting'}
    description={description}
    openGraph={{
        basic: {
            title: '𝔘𝔯𝔟𝔞𝔫',
            type: 'website',
            image: ogImage,
        },
    }}
    twitter={{
        creator: twitterHandle,
        card: 'summary_large_image',
        site: twitterHandle,
        title: '𝔘𝔯𝔟𝔞𝔫',
        description,
        image: ogImage,
        imageAlt: '𝔘𝔯𝔟𝔞𝔫',
    }}
    extend={{
        link: [
            {
                rel: 'sitemap',
                href: '/sitemap-index.xml',
            },
        ],
        meta: [
            {
                name: 'google-site-verification',
                content: '2PrS27IRbrLgYfKmOC1bjuPohSqqsGbEUVY6dKD0bic',
            },
            {
                name: 'yandex-verification',
                content: 'd1860867354dc963',
            },
        ],
    }}
/>
